<body>

    <div class="main-wrapper">

        <div class="page-wrapper">

            <div class="content">

                <div class="page-header">
                    <div class="page-title">
                        <h4>Thêm Sản Phẩm</h4>
                        <h6>Thêm sản phẩm</h6>
                    </div>
                </div>

                <div class="card">

                    <div class="card-body">
                        <form method="post" id="addProduct">
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Tên sản phẩm</label>
                                    <input type="text"  id="ProductName" required>
                                </div>
                            </div>

                              <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Barcode</label>
                                    <input type="text"  id="Barcode" required>
                                </div>
                                </div>

                                 <div class="col-lg-6">
                                <div class="form-group">
                                    <label>SKU</label>
                                    <input type="text"  id="SKU" required>
                                </div>
                                </div>

                                 <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Max Quantity</label>
                                    <input type="text"  id="MaxQuantity" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Min Quantity</label>
                                    <input type="text"  id="MinQuantity" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Selling Price</label>
                                    <input type="text"  id="SellingPrice" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Cost Price</label>
                                    <input type="text"  id="CostPrice" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                  <div class="form-group">
                                    <label>Thể loại Sản Phẩm</label>
                                    <select id="category" class="form-select" required>
                                        {{#each categories}}
                                        <option value="{{this.Category_ID}}">{{this.CategoryName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Length</label>
                                    <input type="text"  id="Length" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Height</label>
                                    <input type="text"  id="Height" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Width</label>
                                    <input type="text"  id="Width" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Weight</label>
                                    <input type="text"  id="Weight" required>
                                </div>
                                </div>
                                 
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" id="DescriptionProduct" required></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Hình Ảnh</label>
                                    <div class="image-upload">
                                        <input type="file" id="fileImageProduct">
                                        <div class="image-uploads">
                                            <img src="/img/icons/upload.svg" alt="img">
                                            <h4>Kéo và thả để thêm ảnh sản phẩm</h4>
                                        </div>
                                    </div>
                                    <div id="filename">

                                    </div>
                                </div>
                            </div>

                            <div class="gap-col">
                                <ul class="d-flex align-items-center">
                                    <li><button type="submit" class="btn btn-primary">Lưu</button></li>
                                    <li><a href="#" class="btn border m-lg-2">Thoát</a>
                                    </li>
                                </ul>
                            </div>
</form>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</body>