<body>

    <div class="main-wrapper">

        <div class="page-wrapper">
            <div class="content">

                <div class="page-header">
                    <div class="page-title">
                        <h4>Chỉnh Sửa Sản Phẩm</h4>
                        <h6>Chỉnh sửa sản phẩm</h6>
                    </div>
                </div>

                <div class="card">
                        <div class="card-body">
                        <form  id="editProduct">
                        <div class="row">

                            <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Mã sản phẩm</label>
                                    <input type="text" value="{{product.Product_ID}}" placeholder="{{product.Product_ID}}" id="Product_ID" disabled>
                                </div>
                                </div>
                              <div class="col-lg-6">

                                <div class="form-group">
                                    <label>Tên sản phẩm</label>
                                    <input type="text" value="{{product.Name}}" placeholder="{{product.Name}}" id="ProductName" required>
                                </div>
                            </div>

                              <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Barcode</label>
                                    <input type="text" value="{{product.Barcode}}" placeholder="{{product.Barcode}}"  id="Barcode" required>
                                </div>
                                </div>

                                 <div class="col-lg-6">
                                <div class="form-group">
                                    <label>SKU</label>
                                    <input type="text"value="{{product.SKU}}" placeholder="{{product.SKU}}"  id="SKU" required>
                                </div>
                                </div>

                                 <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Max Quantity</label>
                                    <input type="text" value="{{product.Max_Quantity}}" placeholder="{{product.Max_Quantity}}"  id="MaxQuantity" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Min Quantity</label>
                                    <input type="text" value="{{product.Min_Quantity}}" placeholder="{{product.Min_Quantity}}" id="MinQuantity" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Selling Price</label>
                                    <input type="text" value="{{product.Selling_Price}}" placeholder="{{product.Selling_Price}}" id="SellingPrice" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Cost Price</label>
                                    <input type="text"  value="{{product.Cost_Price}}" placeholder="{{product.Cost_Price}}" id="CostPrice" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                  <div class="form-group">
                                    <label>Thể loại Sản Phẩm</label>
                                    <select id="category" class="form-select" required>
                                        {{#each categories}}
                                        <option value="{{this.Category_ID}}">{{this.CategoryName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Length</label>
                                    <input type="text"  value="{{product.Length}}" placeholder="{{product.Length}}" id="Length" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                 <div class="form-group">
                                    <label>Height</label>
                                    <input type="text" value="{{product.Height}}" placeholder="{{product.Height}}" id="Height" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Width</label>
                                    <input type="text" value="{{product.Width}}" placeholder="{{product.Width}}" id="Width" required>
                                </div>
                                </div>
                                <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Weight</label>
                                    <input type="text" value="{{product.Weight}}" placeholder="{{product.Weight}}" id="Weight" required>
                                </div>
                                </div>
                                 
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" id="DescriptionProduct" required>{{product.Description}}</textarea>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Hình Ảnh</label>
                                    <div class="image-upload">
                                        <input type="file" id="fileImageProduct">
                                        <div class="image-uploads">
                                            <img src="/img/icons/upload.svg" alt="img">
                                            <h4>Kéo và thả để thêm ảnh sản phẩm</h4>
                                        </div>
                                    </div>
                                    <div id="filename">
                                        {{product.Image}}
                                    </div>
                                </div>
                            </div>

                            <div class="gap-col">
                                <ul class="d-flex align-items-center">
                                    <li><button type="submit" class="btn btn-primary"  >Lưu</button></li>
                                    <li><a href="/" class="btn border m-lg-2">Thoát</a>
                                    </li>
                                </ul>
                            </div>
                        </form>
                        </div>

                </div>

            </div>
        </div>

    </div>

</body>