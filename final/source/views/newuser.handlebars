<body>
    <div class="main-wrapper">

        <div class="page-wrapper">
            <div class="content">

                <div class="page-header">
                    <div class="page-title">
                        <h4>Thêm Người Dùng</h4>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                     <form method="post" id="createuser">
                           <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Tên người dùng</label>
                                    <input type="text" placeholder="Nhập Họ và tên" id="Name" required>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" placeholder="Nhập Email" id="Email" required>
                                </div>
                              <div class="form-group">
                                    <label>BirthDay</label>
                                    <input type="text" id="BirthDay" placeholder="Nhập Ngày Sinh dd/mm/yyyy" class="form" id="BirthDay" required>
                                </div>
                       
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Lương</label>
                                    <input type="text" id="Salary" placeholder="Nhập Lương" required>
                                </div>
                                <div class="form-group">
                                    <label>Chức vụ</label>
                                    <select id="position" class="form-select" required>
                                        <option value="1">Quản lý</option>
                                        <option value="2">Nhân Viên</option>
                                    </select>
                                </div>
                             
                            </div>
                            <!-- end column 2 -->
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label> Ảnh đại diện</label>
                                    <div class="image-upload image-upload-new">
                                        <input type="file" id="file">
                                        <div class="image-uploads">
                                            <img src="/img/icons/upload.svg" alt="img">
                                            <h4>Kéo và thả để tải hình ảnh</h4>
                                        </div>
                                    </div>
                                </div>
                                <div id="thongbaoanh">
                                   
                                </div>
                            </div>
                            <!-- end column 3 -->
                            <div class="gap-col">
                                <ul class="d-flex align-items-center">
                                    <li><button type="submit" class="btn btn-primary">Lưu</button></li>
                                    <li><a href="/user/getEmployees" class="btn border m-lg-2">Thoát</a>
                                    </li>
                                    
                                </ul>
                            </div>
                            <!-- end button  -->
                        </div>
                     </form>
                        <!-- end row -->
                    </div>
                    <!-- end card-body  -->
                </div>
                <!-- end card -->
            </div>
            <!-- end content  -->
        </div>
        <!-- end page  -->
    </div>
    <!-- end main-wrapper  -->
</body>