<body>
    <div class="main-wrapper">

        <div class="page-wrapper">
            <div class="content">

                <div class="page-header">
                    <div class="page-title">
                        <h4>Thêm Người Dùng</h4>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                     <form method="post" id="edituser">
                           <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <input type="hidden" id="user_id" value="{{employee.Employee_ID}}">

                                    <label>Tên người dùng</label>
                                    <input type="text" placeholder="{{employee.Name}}" value="{{employee.Name}}" id="Name" required>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" placeholder="{{employee.Email}}" value="{{employee.Email}}" id="Email" required>
                                </div>
                              <div class="form-group">
                                    <label>BirthDay</label>
                                    <input type="text" id="BirthDay" value="{{formatDate employee.BirthDay}}" placeholder="{{formatDate employee.BirthDay}}"  required>
                                </div>
                       
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Lương</label>
                                    <input type="text" id="Salary" value="{{ employee.Salary}}" placeholder="{{formatSalary employee.Salary}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Chức vụ</label>
                                    <select id="position" class="form-select" required>
                                        <option value="1">Quản lý</option>
                                        <option value="2">Nhân Viên</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    <select id="status" class="form-select" required>
                                        <option value="1">Đang Làm Việc</option>
                                        <option value="2">Nghỉ Việc</option>
                                    </select>
                                </div>
                             
                            </div>
                            <!-- end column 2 -->
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label> Ảnh đại diện</label>
                                    <div class="image-upload image-upload-new">
                                        <input type="file" id="file" >
                                        <div class="image-uploads">
                                            <img src="/img/icons/upload.svg" alt="img">
                                            <h4>Kéo và thả để tải hình ảnh</h4>
                                        </div>
                                    </div>
                                </div>
                                <div id="thongbaoanh">
                                     <input type="hidden" id="thongbaoanhcu" value="{{employee.Image}}">
                                   {{employee.Image}}
                                </div>
                            </div>
                            <!-- end column 3 -->
                            <div class="gap-col">
                                <ul class="d-flex align-items-center">
                                    <li><button type="submit" class="btn btn-primary">Lưu</button></li>
                                    <li><a href="/user/getEmployees" class="btn border m-lg-2">Thoát</a>
                                    </li>
                                    
                                </ul>
                            </div>
                            <!-- end button  -->
                        </div>
                     </form>
                        <!-- end row -->
                    </div>
                    <!-- end card-body  -->
                </div>
                <!-- end card -->
            </div>
            <!-- end content  -->
        </div>
        <!-- end page  -->
    </div>
    <!-- end main-wrapper  -->
</body>